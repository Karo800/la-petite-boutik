{% extends 'base.admin.html.twig' %}

{% block title %}Admin Bout'chou | AdminDashboard{% endblock %}

   {% block stylesheets %}
       <link rel="stylesheet" href="{{ asset('css/style-admin.css') }}">
    {% endblock %} 

{% block body %}
    <h1 class="title">Tableau de bord</h1>

        <div class="search-bar">
            <input type="text" placeholder="Recherche..." />
             <button><i class="fas fa-search"></i></button>
        </div>
        
    <main class="main-content">
        <header class="header">
           
            <div class="admin-info">
                   <span>Admin</span>
            </div>
        </header>

        <section class="stats">
            <div class="card">
                <h3><i class="fas fa-shopping-cart"></i> Commandes</h3>
                <p>125</p>
            </div>

            <div class="card">
                <h3><i class="fas fa-euro-sign"></i> Ventes</h3>
                <p>1 240 €</p>
            </div>

            <div class="card">
                <h3><i class="fas fa-user-plus"></i> Nouveaux clients</h3>
                <p>24</p>
            </div>

            <div class="card">
                <h3><i class="fas fa-box-open"></i> Produits en rupture</h3>
                <p>3</p>
            </div>               
        </section>

        <section class="recent-products">
               {# <h2>Produits récents</h2> #}
            <table>
                <thead>
                    <tr>
                       <th>Produit</th>
                       <th>Prix</th>
                       <th>Stock</th>
                       <th>Date d'ajout</th>
                    </tr>
                </thead>
                <tbody>
                       {# {% for product in recent_products %}
                           <tr>
                               <td>{{ product.name }}</td>
                               <td>{{ product.price }} €</td>
                               <td>{{ product.stock }}</td>
                               <td>{{ product.createdAt|date("d/m/Y") }}</td>
                           </tr>
                       {% else %}
                           <tr><td colspan="4">Aucun produit récent.</td></tr>
                       {% endfor %} #}
                </tbody>
               
               </table>
        </section>
 </main>
    
    <footer class="admin-footer">
        <p>&copy; {{ "now"|date("Y") }} Bout'chou Paradise - Tous droits réservés.</p>
    </footer>
    
 {% endblock %} 
