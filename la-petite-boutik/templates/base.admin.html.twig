<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">   
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="Interface d'administration Bout'chou Paradise.">
   
    <link rel="icon" href="{{ asset('favicon.png') }}" type="image/x-icon">           
    
    <title>{% block title %}Admin | Bout'chou Paradise{% endblock %}</title>

    <link rel="stylesheet" href="{{ asset('css/style-admin.css') }}">

      <!-- cdn font awesome pour les icônes -->  
     <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css" integrity="sha512-Evv84Mr4kqVGRNSgIGL/F/aIDqQb7xQ2vcrdIwxfjThSH8CSR7PBEakCr51Ck+w+/U6swU2Im1vVX0SVk9ABhg==" crossorigin="anonymous" referrerpolicy="no-referrer" />

     <link rel="stylesheet" href="https://cdn.datatables.net/2.3.1/css/dataTables.dataTables.css">
   
    {% block stylesheets %}
    
    {% endblock %}   
</head> 

<body>

  <div class="admin-layout">

    <aside class="sidebar" role="navigation" aria-label="Menu d'administration">

      <div class="sidebar-brand">
        <img src="{{ asset('assets/logo/logo-la-ptite-boutIK.jpg') }}" alt="logo">
        <span>Bout'chou Admin</span>
      </div>

        <div class="menu-toggle" id="menuToggle"><i class="fas fa-bars"></i></div>

      <ul class="sidebar-menu">
        <li><a href="{{ path('app_admin') }}"><i class="fas fa-home"></i> Tableau de bord</a></li>
        <li><a href="{{ path('admin_products') }}"><i class="fas fa-box"></i> Produits</a></li>
        <li><a href=""><i class="fas fa-shopping-cart"></i> Commandes</a></li>
        <li><a href="{{ path('admin_categorys') }}"><i class="fas fa-tags"></i> Catégories</a></li>
        <li><a href="{{ path('admin_users') }}"><i class="fas fa-users"></i> Utilisateurs</a></li>
        <li><a href="{{ path('app_logout') }}" title="Retour à l'accueil"><i class="fas fa-sign-out-alt"></i> Déconnexion</a></li>
      </ul>
    </aside>

      <main class="admin-content">
         {% block body %}{% endblock %}
      </main>
    
  </div>

    <script>
        document.getElementById('menuToggle').addEventListener('click', function() {
        document.querySelector('.sidebar').classList.toggle('open'); 
         });
    </script>

    {% block javascripts %}{% endblock %}

    <script src="https://code.jquery.com/jquery-3.7.1.js"></script>
    <script src="https://cdn.datatables.net/2.3.1/js/dataTables.js">
        new DataTable('#table__products');
    </script>

</body>
</html>